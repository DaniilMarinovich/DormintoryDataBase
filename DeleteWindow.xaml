<Window x:Class="Lab8.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="200" Width="320" MaxWidth="320" MinWidth="320" MinHeight="200" MaxHeight="200" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Window.Background>
        <ImageBrush ImageSource="/alpy-alpen-gory-shvejcariya-nebo-oblaka-priroda-trava-lug-les-pejzazh.jpg"/>
    </Window.Background>
    <Grid Width="{Binding Width, ElementName=StartWindow, Mode=OneWay}" Height="{Binding Height, ElementName=StartWindow, Mode=OneWay}">
        <GroupBox x:Name="DeleteBoxCover" Header="GroupBox" Margin="10,10,10,74" BorderBrush="#FF7D00FF" Background="#FFCACACA" FontWeight="Bold" FontFamily="Arial" FontSize="18">
            <ComboBox x:Name="DeleteBox"/>
        </GroupBox>
        <Button x:Name="Delete_Button" Content="Применить" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" Height="40" Width="300" FontFamily="Arial" FontSize="36" Click="Delete_Button_Click"/>
    </Grid>
</Window>
